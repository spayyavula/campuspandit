# Local Environment Variables Example
# Copy this file to .env.local and update with your local settings
# .env.local is ignored by git for security

# Supabase Configuration
VITE_SUPABASE_URL="https://your-project-url.supabase.co"
VITE_SUPABASE_ANON_KEY="your-anon-key"

# App Configuration
VITE_APP_TITLE="CampusPandit - Local Development"
VITE_APP_VERSION="1.0.0-local"
VITE_APP_ENVIRONMENT="local"

# API Configuration
VITE_API_BASE_URL="http://localhost:8000/api"
VITE_API_TIMEOUT="5000"

# Development Tools
VITE_ENABLE_DEBUG_MODE="true"
VITE_SHOW_PERFORMANCE_METRICS="true"

# Local Feature Overrides
VITE_ENABLE_GAMING="true"
VITE_ENABLE_OFFLINE_MODE="false"
VITE_ENABLE_PWA_PROMPTS="false"

# Test Data
VITE_USE_MOCK_DATA="true"
VITE_MOCK_USER_ID="test-user-123"

# PayU Payment Gateway Configuration
# Get your credentials from https://www.payu.in/
VITE_PAYU_MERCHANT_KEY="your-merchant-key"
VITE_PAYU_MERCHANT_SALT="your-merchant-salt"
VITE_PAYU_BASE_URL="https://test.payu.in"  # Use https://secure.payu.in for production
VITE_PAYU_MODE="test"  # test or live

# Razorpay Payment Gateway Configuration
# Get your credentials from https://dashboard.razorpay.com/
VITE_RAZORPAY_KEY_ID="your-razorpay-key-id"
VITE_RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
VITE_RAZORPAY_MODE="test"  # test or live

# Instamojo Payment Gateway Configuration
# Get your credentials from https://www.instamojo.com/developers/
VITE_INSTAMOJO_API_KEY="your-instamojo-api-key"
VITE_INSTAMOJO_AUTH_TOKEN="your-instamojo-auth-token"
VITE_INSTAMOJO_BASE_URL="https://test.instamojo.com"  # Use https://www.instamojo.com for production
VITE_INSTAMOJO_MODE="test"  # test or live